.board
  display flex
  flex-wrap wrap
  border 4px solid darken($base-color, 10%)
  background #a5a5a5
  border-radius $border-radius
  box-sizing content-box
  position relative
  
  &__win
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    display flex
    align-items center
    justify-content center
    background rgba(255,255,255,.7)
    z-index 10
    
    &-text
      font-size 3rem
      color #444
      text-shadow: 3px 3px 0px rgba(0,0,0,.2);