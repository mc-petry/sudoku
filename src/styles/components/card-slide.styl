.card-slide
  position absolute
  left 0
  top 0
  right 0
  bottom 0

  &.-enter
    opacity 0
    transform translate(100%, 0)
    z-index 10

    &.-enter-active
      opacity 1
      transition all .6s
      transform translate(0, 0)
  
  &.-leave
    opacity 1
    transform scale(1, 1)

    &.-leave-active
      opacity 0
      transition all .6s
      transform scale(.5, .5)